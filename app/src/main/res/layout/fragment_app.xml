<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Fragments.AppFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/addGroceryFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:text="Add Groceries"
        app:backgroundTint="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoggedInUser" />

    <Button
        android:id="@+id/inventoryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Inventory"
        app:backgroundTint="#3F51B5"
        app:layout_constraintEnd_toEndOf="@+id/addGroceryFragment"
        app:layout_constraintStart_toStartOf="@+id/addGroceryFragment"
        app:layout_constraintTop_toBottomOf="@+id/addGroceryFragment" />

    <Button
        android:id="@+id/shoppingListButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Shopping List"
        app:backgroundTint="#3F51B5"
        app:layout_constraintEnd_toEndOf="@+id/inventoryButton"
        app:layout_constraintStart_toStartOf="@+id/inventoryButton"
        app:layout_constraintTop_toBottomOf="@+id/inventoryButton" />

    <Button
        android:id="@+id/wasteStatButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Waste stat"
        app:backgroundTint="#3F51B5"
        app:layout_constraintEnd_toEndOf="@+id/shoppingListButton"
        app:layout_constraintStart_toStartOf="@+id/shoppingListButton"
        app:layout_constraintTop_toBottomOf="@+id/shoppingListButton" />

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="LOG OUT"
        app:backgroundTint="#3F51B5"
        app:layout_constraintEnd_toEndOf="@+id/wasteStatButton"
        app:layout_constraintStart_toStartOf="@+id/wasteStatButton"
        app:layout_constraintTop_toBottomOf="@+id/wasteStatButton" />

    <EditText
        android:id="@+id/LoggedInUser"
        android:layout_width="305dp"
        android:layout_height="61dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="10dp"
        android:focusable="false"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>